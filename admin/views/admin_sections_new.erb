<div class="section-details">
  <h1>New Section</h1>

  <form action="/admin/sections" method="post">
    <div class="detail">
      <label for="title"><strong>Title:</strong></label>
      <input
        type="text"
        name="section[title]"
        id="title"
        class="form-control"
        required
      />
    </div>

    <div class="detail">
      <label for="description"><strong>Description:</strong></label>
      <input
        type="text"
        name="section[description]"
        id="description"
        class="form-control"
      />
    </div>

    <div class="actions">
      <input type="submit" value="Save" class="btn btn-primary" />
      <a href="/admin/sections" class="btn btn-secondary">Back to Index</a>
    </div>
  </form>
</div>
