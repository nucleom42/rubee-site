<%= render_template('admin_header', app_name: 'admin') %>
<div class="section-details">
  <h1>New Document</h1>

  <form action="/admin/documents" method="post">
    <div class="detail">
      <label for="title"><strong>Title:</strong></label>
      <input
        type="text"
        name="document[title]"
        id="title"
        class="form-control"
        required
      />
    </div>

    <div class="detail">
      <label for="content"><strong>Content:</strong></label>
      <input id="content" type="hidden" name="document[content]">
      <trix-editor input="content"></trix-editor>
    </div>


    <div class="detail">
      <label for="section"><strong>Section:</strong></label>
      <select
        name="document[admin_section_id]"
        id="section"
        class="form-control"
      >
        <% @sections.each do |section| %>
          <option value="<%= section.id %>">
            <%= section.title %>
          </option>
        <% end %>
      </select>
    </div>


    <div class="actions">
      <input type="submit" value="Save" class="btn btn-primary" />
      <a href="/admin/documents" class="btn btn-secondary">Back to Index</a>
    </div>
  </form>
</div>
